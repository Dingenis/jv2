<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffff">
    <TextView
        android:id="@+id/infoWindow_infoType"
        android:text="InfoType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#2FB4E0"
        android:layout_margin="0dp"
        android:padding="10dp"
        android:typeface="sans"
        android:textColor="#fff"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="right">
        <TextView
            android:id="@+id/infoWindow_naam"
            android:text="Naam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/infoWindow_dateTime_adres"
            android:text="DateTime/Adres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/infoWindow_coordinaat"
            android:text="Coordinaat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="right"
            android:textColor="#000"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>